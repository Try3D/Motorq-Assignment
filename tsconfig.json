{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
, "tests/middleware", "tests/routes", "tests/services"  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
